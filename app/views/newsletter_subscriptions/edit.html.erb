<h1><%= _('Edit newsletter subscription') -%></h1>
<h2><%= _('Newsletter') -%>: <%= @newsletter_subscription.newsletter.name -%></h2>
<% form_for @newsletter_subscription do |f| %>
<%= hidden_field_tag :sc, params[:sc] -%>
<p>
  <%= _('Name') -%>: <%= f.text_field :name -%>
</p>
<p>
  <%= _('Email Address') -%>: <%= f.text_field :email -%>
</p>
<p>
  <%= _('Content-type') -%>: <%= f.radio_button :content_type, 'text/html' -%>&nbsp;HTML <%= _('or') %>
                             <%= f.radio_button :content_type, 'text/plain' -%>&nbsp;<%= _('Plain text') -%>
</p>

  <%= f.submit _('Update') -%>
<% end %>

<div class='link_button'><%= link_to _('Unsubscribe'), destroy_newsletter_subscription_path(@newsletter_subscription,:sc => params[:sc]),
                :confirm => _('Are you sure?')
                %>
</div>