<h1><%= _('Listing DIV Tags') -%></h1>

<table width=100%>
  <tr>
    <th>Name</th>
    <th>Definition</th>
    <th colspan=3>&nbsp;</th>
  </tr>

<% for div_tag in @div_tags %>
  <tr>
    <td><%=h div_tag.name %></td>
    <td><div style="<%= "#{div_tag.definition}" -%>"><%=h div_tag.definition %></div></td>
    <td><%= link_to 'Show', div_tag %></td>
    <td><%= link_to 'Edit', edit_div_tag_path(div_tag) %></td>
    <td><%= link_to 'Destroy', div_tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New div_tag', new_div_tag_path %>
