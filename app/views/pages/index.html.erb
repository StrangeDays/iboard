<h1><%= _('Listing pages') -%></h1>

<table width=100%>
  <tr>
    <th><%= _('Name') -%></th>
    <th><%= _('Introduction') -%></th>
    <th colspan=4>&nbsp;</th>
  </tr>

<% for page in @pages %>
  <tr>
    <td><%=h page.name %></td>
    <td><%=h page.introduction %></td>
    <td><%= link_to _('Display as page'), show_page_page_path(page) %></td>
    <td><%= link_to _('Show'), page %></td>
    <td><%= link_to _('Edit'), edit_page_path(page) %></td>
    <td><%= link_to _('Destroy'), page, :confirm => _('Are you sure?'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

