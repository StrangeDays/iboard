<div class='ticket_reservation_back'>
  <%= link_to 'Back', @ticket.event %>
</div>

<div class="thank_you">
<%= _('Thank you for your reservation!') -%>
  
    <%= _('Your reservation code is <span class="reservation_code_display">%{code}</span>.
    <br /><br/>Please print this page and show it at the reception') % 
         { :code => @ticket.reservation_code} -%>
    <br /><br />
    <%= _('Note: You have to check out the tickets 30 minutes before the event (before %{time})!') % 
         { :time => ((@ticket.event.begins_at)-30.minutes).to_s(:begins_at) } -%>
</div>

<p>
  <b><%= _('Reservation Name') %>:</b>
  <%=h @ticket.name %>
</p>

<p>
  <b><%= _('Num tickets') -%>:</b>
  <%=h @ticket.num_tickets %>
</p>
<p>    
  <b><%= _('Price per Ticket') -%>:</b>
  € <%=h @ticket.price %>
</p>
<p>    
  <b><%= _('Total price') -%>:</b>
  € <%= sprintf( "%.2f", @ticket.price.to_f * @ticket.num_tickets.to_f) -%>
</p>

<p>
  <b>Email:</b>
  <%=h @ticket.email %>
</p>
<!-- 
<p>
  <b>Telephone:</b>
  <%=h @ticket.telephone %>
</p>

<p>
  <b><%= _('Your notes') -%></b><br/>
  <%=h @ticket.note %>
</p>
-->

<p>
  <b>Event:</b><br/>
  <h1><%=h @ticket.event.title %></h1>
  <h2><%= @ticket.event.begins_at.to_s(:begins_at) -%></h2>
  <br>
  <%= interpret( "[[rimage:#{@ticket.event.picture_id}:#{@ticket.event.title}]]")%>
  <%= interpret( @ticket.event.introduction ) -%><br/>
  <%= interpret( @ticket.event.body.gsub(/\|\|/,"<br/>") ) -%>
</p>
