<h1>Editing ticket</h1>

<%= error_messages_for :ticket %>

<% form_for(@ticket) do |f| %>
  <p>
    <b>Event</b><br />
    <%= f.text_field :event_id %>
  </p>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Price</b><br />
    <%= f.text_field :price %>
  </p>

  <p>
    <b>Reservation code</b><br />
    <%= f.text_field :reservation_code %>
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <b>Num tickets</b><br />
    <%= f.text_field :num_tickets %>
  </p>

  <p>
    <b>Note</b><br />
    <%= f.text_area :note %>
  </p>

  <p>
    <b>Telephone</b><br />
    <%= f.text_field :telephone %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @ticket %> |
<%= link_to 'Back', tickets_path %>
