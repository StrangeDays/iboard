<h1>Listing tickets</h1>

<table width=100%>
  <tr>
    <th>Event</th>
    <th>Name</th>
    <th>Num tickets</th>
    <th>Price</th>
    <th>Total</th>
    <th>Reservation code</th>
    <th>Email</th>
    <th colspan=3>&nbsp;</th>
  </tr>

<% for ticket in @tickets %>
  <tr>
    <td><%= link_to h(ticket.event.title), edit_event_path(ticket.event) %></td>
    <td><%=h ticket.name %></td>
    <td align=center><%=h ticket.num_tickets %></td>
    <td><%=h ticket.price %></td>
    <td><%=h ticket.price * ticket.num_tickets %></td>
    <td><%=h ticket.reservation_code %></td>
    <td><%=h ticket.email %></td>
    <td><%= link_to 'Show', ticket %></td>
    <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
    <td><%= link_to 'Destroy', ticket, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

